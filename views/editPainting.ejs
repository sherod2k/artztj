<% include partials/header %>
	<h1>Edit Painting</h1>
	<%if(global.errors != null && global.errors.length > 1) { 
    for(i=0; i<global.errors.length; i++) { %>
       <div class = "row">
         <div class = "col-md-12">
            <label style="color:red"><%= global.errors[i].msg %> </label>
         </div>
       </div> <% }
       global.errors = null;
  } %>
	<form enctype="multipart/form-data" method="post" action="/editPainting/<%=id %>">
	  <div class="form-group">
	    <label>Painting </label>
	    <input type="text" class="form-control" name="name" value="<%=painting.name %>" placeholder="Painting Name">
	  </div>
	  <div class="form-group">
	    <label>Painting Description</label>
	    <input type="text" class="form-control" name="description" value="<%=painting.description %>" placeholder="Description">
	  </div>
	  <div class="form-group">
	    <label>Painting Type</label>
	    <input type="text" class="form-control" value="<%=painting.type %>" name="type">
	  </div>
	  <div class="form-group">
	    <label>Size</label>
	    <input type="text" class="form-control" value="<%=painting.size %>" name="size">
	  </div>
	  <div class="form-group">
	    <label>Price</label>
	    <input type="text" class="form-control" value="<%=painting.price %>" name="price">
	  </div>
	  <div class="form-group">
	    <label>Image</label>
	    <input type="file" class="form-control" name="paintingimage">
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	  <a class="btn btn-danger" href="/view">Close</a>
	</form>
<% include partials/footer %>