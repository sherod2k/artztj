<% include partials/header %>
 <h3>Please register using the form below </h2>
  <%if(global.errors != null && global.errors.length > 1) { 
    for(i=0; i<global.errors.length; i++) { %>
       <div class = "row">
         <div class = "col-md-12">
            <label style="color:red"><%= global.errors[i].msg %> </label>
         </div>
       </div> <% }
       global.errors = null;
 } %>
 <div class = "row">
  <div class = "col-md-6"> 
     <div class = "well">
       <form method='post' action='/register' enctype='multipart/form-data'>
        <div class = 'form-group'>
         <input class = 'form-control' name='name' type='text' placeholder='Enter Name'></input>
        </div>
        <% if(user && global.userType == 'admin') { %>
        <div class = 'form-group'>
         <input class = 'form-control' name='userType' type='text' placeholder='Enter User Type'></input>
        </div> 
        <% } %> 
        <div class ='form-group'>
         <input class = 'form-control' name='email' type='email' placeholder='Enter Email'></input>
        </div>
        <div class = 'form-group'>
         <input class = 'form-control' name='username' type='text' placeholder='Enter Username'></input>
        </div>
        <div class = 'form-group'>
         <input class = 'form-control' name='password' type='password' placeholder='Enter Password'></input>
        </div>
        <div class = 'form-group'>
         <input class = 'form-control' name='password2' type='password' placeholder='Confirm Password'></input>
        </div>
        <div class = 'form-group'>
         <label>Select Image</label>
         <input class = 'form-control' name='profileimage' type='file'</input>
        </div>
        <p>
        <input class = 'btn btn-primary' type='submit' name='submit' value='Register'></input>
       </form>
     </well>
  </div>
 </div>
 <div class = "row">
  <div class = "col-md-6">
   <br>
  </div>
 </div>
<% include partials/footer %>