<% include partials/header %>
	<h1>Edit User</h1>
	<%if(global.errors != null && global.errors.length > 1) { 
    for(i=0; i<global.errors.length; i++) { %>
       <div class = "row">
         <div class = "col-md-12">
            <label style="color:red"><%= global.errors[i].msg %> </label>
         </div>
       </div> <% }
       global.errors = null;
  } %>
	<div class = "row">
		<div class = "col-md-6">
			<div class = "well">
				<form enctype="multipart/form-data" method="post" action="/editUser/<%=id %>">
				  <div class="form-group">
				    <label>Full Name</label>
				    <input type="text" class="form-control" name="name" value="<%=user.name %>" placeholder="Full Name">
				  </div>
				  <div class="form-group">
				    <label>User Name</label>
				    <input type="text" class="form-control" name="username" value="<%=user.username%>" placeholder="Username">
				  </div>
				  <div class="form-group">
				    <label>User Type</label>
				    <input type="text" class="form-control" value="<%=user.userType %>" name="userType" placeholder="User Type">
				  </div>
				  <div class="form-group">
				    <label>Email</label>
				    <input type="email" class="form-control" value="<%=user.email%>" name="email" placeholder="email">
				  </div> 
				  <div class="form-group">
				    <label>Image</label>
				    <input type="file" class="form-control" name="profileimage">
				  </div> 
				  <button type="submit" class="btn btn-default">Submit</button>
				  <a class="btn btn-danger" href="/viewUsers">Close</a> 
				</form> 
			</div>
		</div>
	</div>
	<div class = "row">
		<div class = "col-md-6">
			<br>
		</div>
	</div>
<% include partials/footer %>