extends layout

block content
 h2.page-header Add Painting
 p 
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/addPainting',enctype="multipart/form-data")
  .form-group
   label Painting Name
   input.form-control(name='name', type='text', placeholder='Enter painting Name')
  .form-group
   label Painting Type
   input.form-control(name='type', type='text', placeholder='Enter type')
  .form-group
   label Price
   input.form-control(name='price', type='text', placeholder='Enter price')
  .form-group
   label Description
   input.form-control(name='description', type='text', placeholder='Enter Description')
  .form-group
   label Size
   input.form-control(name='size', type='text', placeholder='Enter size')
  .form-group
   label Painting Image
   input.form-control(name='paintingimage', type='file')
  input.btn.btn-primary(type='submit', name='submit',value='Add Painting')