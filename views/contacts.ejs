<% include partials/header %>

  <%if(global.errors != null && global.errors.length > 1) { 
     for(i=0; i<global.errors.length; i++) { %>
       <div class = "row">
         <div class = "col-md-12">
            <label style="color:red"><%= global.errors[i].msg %> </label>
         </div>
       </div> <% }
       global.errors = null;
     } %>

  <div class="col-md-6 col-md-offset-3">
    <!-- PAGE TITLE -->
    <div class="page-header">
       <h1><span class="glyphicon glyphicon-tower" style="font-size:20px"></span><span style="font-size:20px; margin-left:10px;">Send a direct e-mail to us</span></h1>
    </div>
    
    <!-- SHOW ERROR/SUCCESS MESSAGES -->
    <div id="messages" class="well" ng-show="message"></div>
      <form method='post' action='/contact'>
         <div id="name-group" class="form-group" >
            <label>Name</label>
            <input type="text" name="name" class="form-control" placeholder="full name">
         </div>
         <div id="email-group" class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" placeholder="email">
         </div>
         <div id="content-group" class="form-group">
            <label>Message</label>
            <textarea  rows="5" cols="50" class="form-control" name = "message" placeholder="comments"></textarea>
         </div>
         <button class="btn btn-success btn-lg btn-block"type="submit" name = "submit">
         <span class="glyphicon glyphicon-flash"></span> Send email
         </button>
         <br>
        
      </form>
    </div>
  </div>

<% include partials/footer %>