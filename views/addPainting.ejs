<% include partials/header %>
 <h1>Add Painting</h1>
   <%if(global.errors != null && global.errors.length > 1) { 
    for(i=0; i<global.errors.length; i++) { %>
       <div class = "row">
         <div class = "col-md-12">
            <label style="color:red"><%= global.errors[i].msg %> </label>
         </div>
       </div> <% }
       global.errors = null;
 } %>
 <div class = "well">
   <form method='post' action='/addPainting' enctype="multipart/form-data">
    <div class = 'form-group'>
     <label> Painting Name </label>
     <input class = 'form-control' name='name' type='text' placeholder='Enter painting Name'></input>
    </div>
    <div class = 'form-group'>
     <label> Painting Type </label>
     <input class = 'form-control' name='type' type='text' placeholder='Enter type'></input>
    </div>
    <div class = 'form-group'>
     <label> Price </label>
     <input class = 'form-control' name='price' type='text' placeholder='Enter price'></input>
    </div>
    <div class = 'form-group'>
     <label> Description </label>
     <input class = 'form-control' name='description' type='text' placeholder='Enter Description'></input>
    </div>
    <div class = 'form-group'>
     <label> Size </label>
     <input class = 'form-control' name='size' type='text' placeholder='Enter size'></input>
    </div>
    <div class = 'form-group'>
     <label> Painting Image </label>
     <input class = 'form-control' name='paintingimage' type='file'></input>
    </div>
    <p>
    <input class = 'btn btn-primary' type='submit' name='submit' value='Add Painting'></input>
    <a class="btn btn-danger" href="/view">Close</a>
   </form>
 </div>
<% include partials/footer %>